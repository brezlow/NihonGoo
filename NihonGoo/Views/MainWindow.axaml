<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NihonGoo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NihonGoo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="Window"
        ExtendClientAreaToDecorationsHint="True"
        UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen"
        TransparencyLevelHint="{Binding TransparencyLevelHint}"
        Icon="/Assets/avalonia-logo.ico"
        Title="NihonGoo">

    <Grid>
        <Border Name="PART_RootWindowBorder"
                BorderThickness="2"
                CornerRadius="8">
            <Grid RowDefinitions="Auto Auto *">
                <Grid Height="40">
                    <TextBlock Margin="5" Text="{Binding #Window.Title}" VerticalAlignment="Center" />
                </Grid>
                <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" FontStyle="Normal">日语五十音</TextBlock>

                <WrapPanel Grid.Row="2" Orientation="Horizontal" MaxWidth="1000">
                    <!-- 每个 Border 的宽度和高度设置为 100，形成正方形 -->
                    <Border Classes="setting" Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- SVG 图标 -->
                            <PathIcon Data="M10 20L20 10L30 20Z" Width="40" Height="40" />
                            <!-- 文字 -->
                            <TextBlock Text="Dark Theme" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Classes="setting" Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <PathIcon Data="M10 20L20 10L30 20Z" Width="40" Height="40" />
                            <TextBlock Text="Transparency" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Classes="setting" Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <PathIcon Data="M10 20L20 10L30 20Z" Width="40" Height="40" />
                            <TextBlock Text="Accent Border" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Classes="setting" Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <PathIcon Data="M10 20L20 10L30 20Z" Width="40" Height="40" />
                            <TextBlock Text="Button Sample" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>

                    <!-- 添加更多 Border 以测试换行 -->
                    <Border Classes="setting" Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <PathIcon Data="M10 20L20 10L30 20Z" Width="40" Height="40" />
                            <TextBlock Text="Sample 5" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Classes="setting" Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <PathIcon Data="M10 20L20 10L30 20Z" Width="40" Height="40" />
                            <TextBlock Text="Sample 6" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </Grid>

        </Border>
    </Grid>
</Window>